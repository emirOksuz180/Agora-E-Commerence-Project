@model SliderCreateModel
@{
    Layout = "_AdminLayout";
}

<div class="row">
      <div class="col">
        <div class="card shadow">
          <div class="card-header py-1 d-flex justify-content-between align-items-center">
            <h5 class="card-title">Slider Ekle</h5>
            <a asp-action="Index" class="btn btn-sm btn-primary">
              <i class="fa-solid fa-list"></i>
            </a>
          </div>
          <div class="card-body">
             <form method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                  <label asp-for="SliderTitle" class="col-sm-2 col-form-label">Başlık</label>
                  <div class="col-sm-10">
                    <input asp-for="SliderTitle" class="form-control">
                  </div>
                </div>

                <div class="row mb-3 mt-2">
                  <label asp-for="SliderDescription" class="col-sm-2 col-form-label">Açıklama</label>
                  <div class="col-sm-10">
                    <textarea  asp-for="SliderDescription" rows="3" class="form-control"></textarea>
                  </div>
                </div>

                

                <div class="row mb-3">
                  <label asp-for="ImageUrl" class="col-sm-2 col-form-label">Resim</label>
                  <div class="col-sm-10">
                    <input asp-for="ImageUrl" class="form-control">
                  </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="DisplayOrder" class="col-sm-2 col-form-label">Index Sırası</label>
                  <div class="col-sm-10">
                    <input asp-for="DisplayOrder" class="form-control">
                  </div>
                </div>

                <div class="row mb-3 mt-2">
                  <label asp-for="IsActive" class="col-sm-2 col-form-label">Aktif</label>
                  <div class="col-sm-10">
                    <input asp-for="IsActive" class="form-check-input">
                  </div>
                </div>


                <div class="row mb-3">
                  <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                  </div>
                </div>
             </form>

          </div>
        </div>
      </div>
    </div>

@section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")   
}

<script>

    document.querySelectorAll('.form-check-input').forEach(cb => {
    cb.addEventListener('keydown', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
        }
    });
});


</script>

