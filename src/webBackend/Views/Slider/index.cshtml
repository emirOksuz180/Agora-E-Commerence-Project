@model List<SliderGetModel>
@{

  Layout = "_AdminLayout";
}



<div class="row">
      <div class="col">
        <div class="card shadow">
          <div class="card-header py-1 d-flex justify-content-between align-items-center">
            <h5 class="card-title">Sliderlar</h5>
            <a asp-action="Create" class="btn btn-sm btn-primary">
              <i class="fa-solid fa-plus"></i>
            </a>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered cursor-pointer table-hover table spriped mb-0">
              <thead class="table-secondary">
                <tr>
                  <th style="width: 20px;">ID</th>
                  <th style="width: 200px;">Resim</th>
                  <th>Başlık</th>
                  <th>Aktif</th>
                  
                  <th>Index</th>
                  <th style="width: 50px;"></th>
                </tr>
              </thead>
              <tbody>
                @foreach(var item in Model) {
                  <tr>                  
                    <td>@item.SliderId</td>
                    <td>
                      <img src="img/@item.ImageUrl" class="img-fluid" alt="">
                    </td>
                    <td>@item.SliderTitle</td>
                    <td>
                      @if(item.IsActive) {
                        <i class="fa-solid fa-circle-check text-success"></i>
                      }
                      else {
                        <i class="fa-solid fa-circle-xmark text-danger"></i>
                      }
                    </td>
                    <td>@item.DisplayOrder</td>
                    <td class="d-flex">
                      <a asp-controller="Slider" asp-action="Edit" asp-route-id="@item.SliderId" class="btn btn-primary btn-sm">
                        <i class="fa-solid fa-pen-to-square"></i>
                      </a>
                      <a asp-controller="Slider" asp-action="Delete" asp-route-id= "@item.SliderId" class="btn btn-danger btn-sm">
                        <i class="fa-solid fa-trash"></i>
                      </a>
                    </td>
                  </tr>
                }
              </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
    </div>