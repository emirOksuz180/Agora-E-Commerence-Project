@model KategoriEditModel


@{
  Layout = "_AdminLayout";
}



<div class="row">
      <div class="col">
        <div class="card shadow">
          <div class="card-header py-1 d-flex justify-content-between align-items-center">
            <h5 class="card-title">Kategori Güncelle</h5>
            <a href="kategori.html" class="btn btn-sm btn-primary">
              <i class="fa-solid fa-list"></i>
            </a>
          </div>
          <div class="card-body">
            <div class="table-responsive">
            <div asp-validation-summary="All" class="text-danger"></div>
              <form method = "post">
                <input type="hidden" name="Id" value="@Model.Id">
                <div class="row mb-3 mt-2">
                  <label asp-for="Name" class="col-sm-2 col-form-label">Kategori Adı</label>
                  <div class="col-sm-10">
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                  </div>
                </div>

                <div class="row mb-3">
                  <label asp-for="Url" class="col-sm-2 col-form-label">URL</label>
                  <div class="col-sm-10">
                    <input asp-for="Url"  class="form-control">
                    <span asp-validation-for="Url" class="text-danger"></span>
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    @section Scripts {
      <script>
          @await Html.PartialAsync("_ValidationScriptsPartial")
      </script>
    }