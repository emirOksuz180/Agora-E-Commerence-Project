@using webBackend.Models
@model IEnumerable<AppUser>

@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Kullan覺c覺lar</h5>
                <a asp-controller="User"
                   asp-action="Create"
                   class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>

            <div class="card-body">
                <form method="get">
                    <div class="input-group mb-2">
                        <select name="role"
                                class="form-select"
                                asp-items="ViewBag.Roller">
                            <option value="" selected>Hepsi</option>
                        </select>
                        <button class="btn btn-secondary" type="submit">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </div>
                </form>

                @if (Model.Count() == 0)
                {
                    <p class="text-danger">Kullan覺c覺 Yok</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table spriped mb-0">
                            <thead class="table-secondary">
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th style="width: 110px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td style="wdith: 150px;">
                                            <a asp-action="Edit"
                                               asp-route-id="@item.Id"
                                               class="btn btn-primary btn-sm me-2">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </a>
                                            <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm me-2">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
