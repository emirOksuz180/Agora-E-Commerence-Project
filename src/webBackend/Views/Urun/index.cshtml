@model List<UrunGetModel>

@{
  Layout  = "_AdminLayout";
}

<div class="row">
  <div class="col">
    <div class="card shadow">
      <div class="card-header py-1 d-flex justify-content-between align-items-center">
        <h5 class="card-title">Ürünler</h5>
        <a asp-controller="Urun" asp-action="Create" class="btn btn-sm btn-primary">
          <i class="fa-solid fa-plus"></i>
        </a>
      </div>
      <div class="card-body">
        <form method="get">
          <div class="input-group mb-2">
            <select name="kategori" asp-items="ViewBag.Categories" class="form-select">
              <option value="" selected>Hepsi</option>
            </select>
            <button class="btn btn-secondary" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i>
            </button>
          </div>
        </form>

        @if(Model.Count == 0) {
          <p class="text-danger mb-3">Ürün Bulunamadı</p>
        }
        else {
          <div class="table-responsive">
            <table class="table table-bordered cursor-pointer table-hover table spriped mb-0">
              <thead class="table-secondary">
                <tr>
                  <th style="width: 20px;">ID</th>
                  <th style="width: 80px;">Resim</th>
                  <th>Ürün Adı</th>
                  <th>Fiyat</th>
                  <th>Aktif</th>
                  <th>Anasayfa</th>
                  <th>Kategori</th>
                  <th style="width: 90px;">İşlemler</th>
                </tr>
              </thead>
              <tbody>
                @foreach(var urun in Model) {
                  <tr>                  
                    <td>@urun.ProductId</td>
                    <td>
                      <img src="@urun.ImageUrl" class="img-fluid" alt="">
                    </td>
                    <td>@urun.ProductName</td>
                    <td>@urun.Price</td>


                    

                    <td>
                      @if(urun.IsActive) {
                        <i class="fa-solid fa-circle-check text-success"></i>
                      }
                      else {
                        <i class="fa-solid fa-circle-xmark text-danger"></i>
                      }
                    </td>
                    <td>
                      @if(urun.AnaSayfa) {
                        <i class="fa-solid fa-circle-check text-success"></i>
                      }
                      else {
                        <i class="fa-solid fa-circle-xmark text-danger"></i>
                      }
                    </td>
                    <td>@urun.Category?.Name</td>
                    <td class="d-flex justify-content-center gap-2">
                      <a asp-controller="Urun" asp-action="Edit" asp-route-id="@urun.ProductId" class="btn btn-primary btn-sm">
                        <i class="fa-solid fa-pen-to-square"></i>
                      </a>
                      <a asp-controller="Urun" asp-action="Delete" asp-route-id="@urun.ProductId" class="btn btn-danger btn-sm me-2">
                        <i class="fa-solid fa-trash"></i>
                      </a>
                    </td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        }
      </div>
    </div>
  </div>
</div>
