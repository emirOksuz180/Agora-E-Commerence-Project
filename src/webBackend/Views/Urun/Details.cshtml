@model Product

@section Bar {
    @await Component.InvokeAsync("Navbar")
}

<section class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="gallery-wrap">
                    <div class="img-big-wrap img-thumbnail">
                        <a href="@Model.ImageUrl" data-type="image" data-fslightbox>
                            <img src="@Model.ImageUrl" alt="">
                        </a>
                    </div>
                    <div class="thumbs-wrap">
                        <a href="@Model.ImageUrl" data-type="image" data-fslightbox>
                            <img src="@Model.ImageUrl" height="60" alt="">
                        </a>
                        <a href="@Model.ImageUrl" data-type="image" data-fslightbox>
                            <img src="@Model.ImageUrl" height="60" alt="">
                        </a>
                        <a href="@Model.ImageUrl" data-type="image" data-fslightbox>
                            <img src="@Model.ImageUrl" height="60" alt="">
                        </a>
                        <a href="@Model.ImageUrl" data-type="image" data-fslightbox>
                            <img src="@Model.ImageUrl" height="60" alt="">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <article>
                    <h4 class="title text-dark">@Model.ProductName</h4>
                    <div class="rating-wrap">
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star"></span>
                    </div>
                    <p class="text-success">Stokta</p>
                    <div class="mb-3"><b class="price h5">@Model.Price ₺</b></div>
                    <div class="product-description mb-3">@Model.ProductDescription</div>
                    <div class="buttons">
                        <form action="/Cart/AddToCart" method="post" class="me-1 d-inline">
                            <input type="hidden" name="urunId" value="@Model.ProductId">
                            <button type="submit" href="#" class="btn btn-warning">
                                <i class="fa fa-shopping-basket "></i> Sepete Ekle
                            </button>
                        </form>
                        <a href="#" class="btn btn-light">
                            <i class="fa-regular fa-heart basket me-1"></i> Listeye Ekle
                        </a>
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>


@{
    var urunler = (List<Product>)ViewData["BenzerUrunler"]!;

    if (urunler.Count > 0)
    {
        <section class="mt-3">
            <div class="container">
                <h4 class="mb-3">Benzer Ürünler</h4>
                <div class="row gy-3">

                    @foreach (var item in urunler)
                    {
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="card shadow">
                                <div class="img-wrap">
                                    <span class="fa fa-regular fa-heart"></span>
                                    <img src="@item.ImageUrl" alt="@item.ProductName" class="card-img-top">
                                </div>

                                <div class="border-top info-wrap">
                                    <a asp-controller="Urun" asp-action="Details" asp-route-id="@item.ProductId"
                                        class="title text-truncate">@item.ProductName</a>
                                    <div class="price-wrap mb-3">
                                        <span class="price-discount">@item.Price ₺</span>
                                        @* <del class="price">49.999 ₺</del> *@
                                    </div>
                                    <a href="#" class="btn btn-light w-100">
                                        <i class="fa fa-shopping-basket me-1"></i> Sepete Ekle
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </section>
    }

}
