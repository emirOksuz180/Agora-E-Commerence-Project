@using webBackend.Models

@{
  Layout = "_AdminLayout";
}

@model List<KategoriGetModel>


<div class="row">
      <div class="col">
        <div class="card shadow">
          <div class="card-header py-1 d-flex justify-content-between align-items-center">
            <h5 class="card-title">Kategoriler</h5>
            <a asp-controller="Kategori" asp-action="Create" class="btn btn-sm btn-primary">
              <i class="fa-solid fa-plus"></i>
            </a>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered table spriped mb-0">
              <thead class="table-secondary">
                <tr>
                  <th>ID</th>
                  <th>Kategori Adı</th>
                  <th>URL</th>
                  <th>Ürün Sayısı</th>
                  <th style="width: 90px;"></th>
                </tr>
              </thead>
              <tbody>

                @foreach(var cat in Model) {
                  <tr>                  
                    <td>@cat.Id</td>
                    <td>@cat.Name</td>
                    <td>@cat.Url</td>
                    <td>@cat.ProductCount</td>
                    <td class="d-flex">
                      <a href="kategoriEkle.html" class="btn btn-primary btn-sm me-2">
                        <i class="fa-solid fa-pen-to-square"></i>
                      </a>
                      <a href="urun.html" class="btn btn-primary btn-sm">
                        <i class="fa-solid fa-right-long"></i>
                      </a>
                    </td>
                  </tr>
                }
                

                
              </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
    </div>